{
  "name": "@greenrenge/lib-template",
  "version": "1.0.0",
  "description": "template for any libraries",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf ./dist && babel src -s -d dist --source-maps",
    "test": "cross-env NODE_ENV=test mocha --recursive \"test/**/*.test.js\"",
    "lint": "eslint --ignore-path .eslintignore .",
    "lint:fix": "npm run lint -- --fix",
    "test:watch": "cross-env NODE_ENV=test nodemon --watch test --watch src --exec npm run test",
    "start": "cross-env NODE_ENV=development nodemon --watch src --exec babel-node -- src/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Greenrenge/lib-template.git"
  },
  "author": "Kitthanat S.",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Greenrenge/lib-template/issues"
  },
  "homepage": "https://github.com/Greenrenge/lib-template#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/node": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/register": "^7.11.5",
    "babel": "^6.23.0",
    "babel-eslint": "^10.1.0",
    "babel-node": "0.0.1-security",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chaid": "^1.0.2",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-mocha": "^6.2.2",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.3.0",
    "lint-staged": "^10.0.3",
    "mocha": "^7.0.1",
    "mocked-env": "^1.3.2",
    "nodemon": "^2.0.4",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0"
  },
  "files": [
    "dist",
    "README.md"
  ]
}
